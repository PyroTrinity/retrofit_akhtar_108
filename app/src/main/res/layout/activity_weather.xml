<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/theme_pale_mint"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- HEADER DENGAN GRADASI -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_gradient_card"
        android:padding="24dp"
        android:layout_margin="16dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvLokasi"
            android:text="Memuat Lokasi..."
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tvSuhu"
                android:text="--Â°"
                android:textSize="60sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvCuaca"
                android:text="--"
                android:textSize="20sp"
                android:layout_marginStart="16dp"
                android:textColor="@color/theme_pale_mint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <!-- LIST JAM (HORIZONTAL) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvJam"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false"/>

    <!-- TITLE PRAKIRAAN 5 HARI -->
    <TextView
        android:id="@+id/tvDailyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prakiraan 5 Hari"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/theme_dark_purple" />

    <!-- LIST HARIAN (HORIZONTAL) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDaily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false" />

</LinearLayout>